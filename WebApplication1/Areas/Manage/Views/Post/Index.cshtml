@using WebApplication1.Models;
@using WebApplication1.View_Models;

@{
    ViewData["Title"] = "Index";
}
@model ICollection<Post>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Id</th>
            <th scope="col">ImgUrl</th>
            <th scope="col">Title</th>
            <th scope="col">About</th>
            <th scope="col">Time</th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
    </tr>
  </thead>
  <tbody>
      @foreach (var item in Model)
        {
            <tr>
          
                <td>@item.Id</td>
                <td > @item.ImgUrl.Substring(0,7)</td>
                <td>@item.Title</td>
                <td>@item.About</td>
                <td>@item.Time</td>
                <td><a  class="btn btn-danger" asp-action="Delete" asp-controller="Post" asp-route-id="@item.Id">Delete</a></td>
                <td><a class="btn btn-success" asp-action="Update" asp-controller="Post" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
  </tbody>
</table>
